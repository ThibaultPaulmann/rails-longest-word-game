<h1>New Game</h1>
<div class="letter-container">
  <% @grid.each do |letter| %>
    <div class="letter-icon"><p><%= letter %></p></div>
  <% end  %>
</div>
<form action="/score" method="post" data-turbo="false" class="form-word">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @grid %>
  <div class="input-group mb-3">
    <input type="text" class="form-control" placeholder="Your word" name="word">
    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Play</button>
  </div>
</form>
